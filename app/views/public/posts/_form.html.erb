<% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model: post, method: :post, path: posts_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :bean_origin, "豆の産地" %>
    <%= form.text_field :bean_origin, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :bean_roast, "焙煎度" %><br>
    <%= form.range_field :bean_roast, in: 1..5, step: 1, class: "form-control-range" %>
    <small class="form-text text-muted d-flex justify-content-between">
      <span>浅煎り</span>
      <span>中煎り</span>
      <span>深煎り</span>
    </small>
  </div>

  <div class="form-group">
    <%= form.label :bean_acidity, "豆の酸味" %><br>
    <%= form.range_field :bean_acidity, in: 1..5, step: 1, class: "form-control-range" %>
    <small class="form-text text-muted d-flex justify-content-between">
      <span>控えめ</span>
      <span>中</span>
      <span>強い</span>
    </small>
  </div>

  <div class="form-group">
    <%= form.label :bean_bitter, "豆の苦味" %><br>
    <%= form.range_field :bean_bitter, in: 1..5, step: 1, class: "form-control-range" %>
    <small class="form-text text-muted d-flex justify-content-between">
      <span>控えめ</span>
      <span>中</span>
      <span>強い</span>
    </small>
  </div>

  <div class="form-group">
    <%= form.label :bean_extraction, "抽出方法" %>
    <%= form.text_field :bean_extraction, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :bean_title, "タイトル" %>
    <%= form.text_field :bean_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :bean_body, "本文" %>
    <%= form.text_area :bean_body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :bean_image, "画像" %>
    <%= form.file_field :bean_image, class: 'form-control-file' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

