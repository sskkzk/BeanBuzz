<!-- app/views/public/posts/show.html.erb -->

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header d-flex align-items-center">
        <%= image_tag @post.user.get_image.variant(resize_to_fill: [40, 40]).processed, class: 'rounded-circle mr-2', alt: 'User Image' %>
        <h5 class="card-title m-0">
          <%= link_to @post.user.name, user_path(@post.user), class: 'text-dark' %>
        </h5>
      </div>
      <div class="card-body">
        <%= image_tag @post.get_image.variant(resize_to_fill: [600, 600]).processed, class: 'card-img-top', alt: 'Bean Image' %>
        <p class="card-text"><strong>Origin:</strong> <%= @post.bean_origin %></p>
        <p class="card-text"><strong>Roast:</strong> <%= @post.bean_roast %></p>
        <p class="card-text"><strong>Acidity:</strong> <%= @post.bean_acidity %></p>
        <p class="card-text"><strong>Bitterness:</strong> <%= @post.bean_bitter %></p>
        <p class="card-text"><strong>Extraction:</strong> <%= @post.bean_extraction %></p>
        <p class="card-text"><strong>Body:</strong> <%= @post.bean_body %></p>
        <div class="d-flex justify-content-between mb-4">
          <% if current_user == @post.user %>
            <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% end %>
          <%= link_to 'Back', posts_path, class: 'btn btn-primary' %>
        </div>

        <!-- コメントフォーム -->
        <% unless @post.comments.exists?(user: current_user) %>
          <h5>Leave a Comment</h5>
          <%= form_with(model: [@post, @post.comments.find_or_initialize_by(user: current_user)], local: true) do |form| %>
            <div class="form-group">
              <%= form.text_area :comment_body, class: 'form-control', rows: 3, placeholder: 'コメントを入力してください' %>
            </div>
            <%= form.submit 'Submit', class: 'btn btn-primary' %>
          <% end %>
        <% end %>

        <!-- コメント一覧の表示 -->
        <h5>Comments</h5>
        <div class="list-group mb-4">
          <% if @post.comments.empty? %>
            <div class="col-md-12 text-center">
              <h2><span class="material-symbols-outlined" style="font-size: 40px; vertical-align: middle;">info</span><span style="vertical-align: middle;">まだコメントがありません。</span></h2>
            </div>
          <% else %>
            <% @post.comments.each do |comment| %>
              <div class="comment bg-light p-2 mb-2 rounded">
                <p><strong><%= comment.user.name %>:</strong> <%= comment.comment_body %></p>
                <div class="d-flex justify-content-end">
                  <% if current_user == comment.user %>
                    <%= link_to 'Edit', edit_post_comment_path(@post, comment), class: 'btn btn-sm btn-secondary mr-2' %>
                    <%= link_to 'Delete', post_comment_path(@post, comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

