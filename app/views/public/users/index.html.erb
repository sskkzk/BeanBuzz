<div class="row">
  <div class="col-md-6 mb-4">
    <h1>ユーザー一覧</h1>
  </div>

  <!-- 検索フォーム -->
  <div class="col-md-6 mb-4">
    <%= form_with url: users_path, method: :get, local: true do %>
      <div class="input-group">
        <%= text_field_tag :search_users, params[:search_users], placeholder: 'ユーザー名で検索', class: 'form-control', style: 'margin-right: 10px;' %>
        <div class="input-group-append">
          <%= submit_tag '検索', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body text-center" style="padding: 20px; background-color: #f8f9fa; border-radius: 5px;">
          <%= image_tag user.user_image.variant(resize_to_fill: [100, 100]).processed, class: 'rounded-circle', alt: 'ユーザー画像' %>
          <h5 class="card-title mt-3" style="font-size: 1.25rem;"><%= link_to user.name, user_path(user) %></h5>
          <p class="card-text"><%= user.introduction %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- ページネーション -->
<div class="d-flex justify-content-center mt-4">
  <%= paginate @users %>
</div>



