<div class="row mb-4">
  <h1><%= @user.name %>'s Page</h1>
</div>
<div class="row">
  <div class="col-md-4">
    <h2>ユーザー情報</h2>
    <div class="card">
      <div class="card-body text-center">
        <% if @user.user_image.attached? %>
          <%= image_tag @user.user_image.variant(resize_to_fill: [300, 300]).processed, class: 'rounded-circle', alt: 'User Image' %>
        <% else %>
          <%= image_tag 'coffee.jpg', size: "300x300", class: 'rounded-circle', alt: 'Default User Image' %>
        <% end %>
        <h5 class="card-title mt-3"><%= @user.name %></h5>
        <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>
        <p class="card-text"><strong>Introduction:</strong> <%= @user.introduction %></p>
        <% if @user == current_user %>
          <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <h2>投稿一覧</h2>
    <% @user.posts.each do |post| %>
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex">
            <div class="user-info mr-3">
              <% if @user.user_image.attached? %>
                <%= image_tag @user.user_image.variant(resize_to_fill: [60, 60]).processed, class: 'rounded-circle', alt: 'User Image' %>
              <% else %>
                <%= image_tag 'coffee.jpg', size: "60x60", class: 'rounded-circle', alt: 'Default User Image' %>
              <% end %>
            </div>
            <div>
              <h5><%= link_to @user.name, user_path(@user), class: 'text-dark' %></h5>
            </div>
          </div>
          <div class="d-flex mt-3">
            <div class="post-image mr-3 d-flex justify-content-center align-items-center">
              <% if post.bean_image.attached? %>
                <%= image_tag post.bean_image.variant(resize_to_fill: [200, 200]).processed, class: 'img-thumbnail', alt: 'Bean Image' %>
              <% else %>
                <%= image_tag 'bean.jpg', size: "200x200", class: 'img-thumbnail', alt: 'Default Bean Image' %>
              <% end %>
            </div>
            <div class="post-details flex-grow-1 align-items-center">
              <h5 class="card-title"><%= post.bean_title %></h5>
              <p><strong>Origin:</strong> <%= post.bean_origin %></p>
              <p>
                <strong>Roast:</strong>
                <div class="progress">
                  <div class="progress-bar bg-success" role="progressbar" style="width: <%= (post.bean_roast.to_i * 25).to_s %>%" aria-valuenow="<%= post.bean_roast.to_i %>" aria-valuemin="0" aria-valuemax="4"></div>
                </div>
                <div class="d-flex justify-content-between">
                  <small class="form-text text-muted">浅煎り</small>
                  <small class="form-text text-muted">中煎り</small>
                  <small class="form-text text-muted">深煎り</small>
                </div>
              </p>
              <p>
                <strong>Acidity:</strong>
                <div class="progress">
                  <div class="progress-bar bg-primary" role="progressbar" style="width: <%= (post.bean_acidity.to_i * 25).to_s %>%" aria-valuenow="<%= post.bean_acidity.to_i %>" aria-valuemin="0" aria-valuemax="4"></div>
                </div>
                <div class="d-flex justify-content-between">
                  <small class="form-text text-muted">少</small>
                  <small class="form-text text-muted">酸味</small>
                  <small class="form-text text-muted">多</small>
                </div>
              </p>
              <p>
                <strong>Bitterness:</strong>
                <div class="progress">
                  <div class="progress-bar bg-danger" role="progressbar" style="width: <%= (post.bean_bitter.to_i * 25).to_s %>%" aria-valuenow="<%= post.bean_bitter.to_i %>" aria-valuemin="0" aria-valuemax="4"></div>
                </div>
                <div class="d-flex justify-content-between">
                  <small class="form-text text-muted">少</small>
                  <small class="form-text text-muted">苦味</small>
                  <small class="form-text text-muted">多</small>
                </div>
              </p>
              <p><strong>Extraction:</strong> <%= post.bean_extraction %></p>
              <p><strong>Body:</strong> <%= post.bean_body %></p>
              <p><strong>Created At:</strong> <%= post.created_at.strftime("%Y-%m-%d") %></p>
              <div class="d-flex justify-content-between mt-2">
                <%= link_to 'Show', post, class: 'btn btn-primary' %>
                <% if current_user == @user %>
                  <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
